<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
<style>
    .container {    
        background-color: #f3f4f6;
    }
    .profile-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
    .profile-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    .profile-info {
        font-size: 16px;
        margin-bottom: 1rem;
    }
    .profile-button {
        background-color: #1a202c;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 0.75rem 1rem;
        cursor: pointer;
    }
    .profile-button:hover {
        background-color: #2d3748;
    }
</style>

<div class="container">
  <div class="flex items-center justify-center h-screen">
    <div class="profile-container">
      <h1 class="profile-title">Mi Perfil</h1>
      <div class="profile-info">
        <p>Hola, <strong>{{name}} {{last_name}}</strong></p>
        <strong style="color: red;">Tus datos:</strong>
        <p><strong>Usuario:</strong> {{username}}</p>
        <p><strong>Correo electr√≥nico:</strong> {{email}} </p>
        <p><strong>ROL:</strong> {{role}} </p>
      </div>
      <button class="profile-button" onclick="window.location.href = '/productViews/products';">Shop</button>
      <button class="profile-button" onclick="window.location.href = '/cartViews/{{cid}}';">Ir Carrito</button>
      <button class="profile-button" onclick="window.location.href = '/logout';">Logout</button>
    </div>
  </div>
</div>