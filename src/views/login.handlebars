<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
<style>
  .container {
    background-color: #f3f4f6;
  }
  .login-container {
    max-width: 400px;
    margin: 0 auto;
    padding: 2rem;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }
  .login-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  .login-input {
    border: 1px solid #d2d6dc;
    border-radius: 4px;
    padding: 0.5rem;
    width: 100%;
    margin-bottom: 1rem;
  }
  .login-button {
    background-color: #1a202c;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.75rem 1rem;
    width: 100%;
    cursor: pointer;
  }
  .login-button:hover {
    background-color: #2d3748;
  }
  .error-message {
    color: red;
    font-size: 14px;
    margin-top: 0.5rem;
  }

  .button-spacing {
    margin-bottom: 1rem;
  }

  .register-button-container {
    text-align: center;
    margin-top: 3rem;
  }
  .register-text {
    margin-bottom: 0.5rem;
  }
  .register-button {
    background-color: #3182ce;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 0.5rem 1rem;
    text-decoration: none;
  }
  .register-button:hover {
    background-color: #2c5282;
  }
</style>

<div class="container">
  <div class="flex items-center justify-center h-screen">
    <div class="login-container">
      <h1 class="login-title">Iniciar sesión</h1>
      <form action="/login" method="POST">
        <label for="username" class="block">Nombre de usuario</label>
        <input type="text" id="username" name="username" class="login-input" required>

        <label for="password" class="block">Contraseña</label>
        <input type="password" id="password" name="password" class="login-input" required>

        <button type="submit" class="login-button">Iniciar sesión</button>

        {{#if loginError}}
            <p class="error-message">Credenciales incorrectas. Inténtalo de nuevo.</p>
        {{/if}}
      </form>
      <p class="button-spacing"></p>
      <a class="login-button" href="/api/auth/github">Login con Github</a>

      <div class="register-button-container">
        <p class="register-text">¿No tienes una cuenta?</p>
        <a class="register-button" href="/register">REGISTRATE</a>
      </div>
      
    </div>
  </div>
</div>